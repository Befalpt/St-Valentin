    <script>
        function verifierReponse(num, reponseAttendue) {
            let input = document.getElementById('rep' + num).value.toLowerCase().trim();
            let result = document.getElementById('result' + num);
            let nextEnigme = document.getElementById('enigme' + (num + 1));

            if (input === reponseAttendue) {
                result.textContent = "Bravo ! Ton paquet est cach√© " + reponseAttendue;
                result.classList.remove("hidden");
                if (nextEnigme) {
                    nextEnigme.classList.remove("hidden");
                }
            } else {
                result.textContent = "Oups, essaie encore !";
                result.classList.remove("hidden");
            }
        }
    </script>
